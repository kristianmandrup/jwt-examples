<p id="notice"><%= notice %></p>
<div class = container>
  <div class = "row">
    <div class = "col-md-12">
      <div class = "container post-container">
      <h1>Listing Posts</h1>
      <table class="table table-hover table-bordered">
        <tr>
          <td>Id</td>
          <td>Title</td>
          <td>Edit</td>
          <td>Delete</td>
        </tr>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.user_id %></td>
            <td><%= post.title %></td>
            <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-primary btn-success' %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-danger' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<br/>
<%= link_to 'New Post', new_post_path %>
